alias bx.sc (list) {
    fe ($list) xx {
        @ :mod = pass(@+ $xx)
        @ :spc = mod ? mod : [ ]
        @ :nic = strip(@+ $xx)
        @ :ret #= [14\[] ## [11] ## spc ## [12] ## [$[10]nic] ## [14\]] ## [ ]
    }
    RETURN $ret
}

on ^353 "*" {
    @ temp.scchan = [$2]
    @ temp.scusers #= [$3-]
