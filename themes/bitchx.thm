on ^366 "*" {
    xecho -b 14[9Users14\(03$temp.scchan14:03$#chanusers($temp.scchan)14\)]
    fe ($temp.scusers) a b c d e {
        echo $bx.sc($a $b $c $d $e)
    }
    @ temp.scchan =
    @ temp.scusers =
